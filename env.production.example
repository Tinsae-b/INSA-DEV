# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual production values
# NEVER commit .env file to version control!

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# SECURITY WARNING: Generate a new secret key for production!
# Generate using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one-minimum-50-characters

# Debug mode (ALWAYS False in production)
DEBUG=False

# Allowed hosts (comma-separated list of your domain names)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Admin URL (change from default 'admin/' for security)
ADMIN_URL=secure-admin-panel/

# Admin email for security notifications
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================

POSTGRES_DB=yearbook_db
POSTGRES_USER=yearbook_user
POSTGRES_PASSWORD=your-strong-database-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Full database URL (auto-constructed in docker-compose)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================

REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Frontend URLs (comma-separated, no trailing slashes)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# SSL/HTTPS CONFIGURATION
# =============================================================================

# Enable HTTPS redirect in production
SECURE_SSL_REDIRECT=True

# HTTP Strict Transport Security (1 year = 31536000 seconds)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Secure cookies
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session timeout (in seconds, default: 1 hour = 3600)
SESSION_COOKIE_AGE=3600
SESSION_SAVE_EVERY_REQUEST=True
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum upload size in MB
MAX_UPLOAD_SIZE=5

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL for Next.js frontend
NEXT_PUBLIC_API_URL=https://yourdomain.com/yearbook/api

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Application version
APP_VERSION=1.0.0


